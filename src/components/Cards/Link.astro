---
import { Icon } from "astro-icon/components";

interface Props {
  title?: string;
  colSpan?: string;
  rowSpan?: string;
  href?: string;
  target?: string;
  classes?: string;
}

const { title, colSpan, rowSpan, href, target, classes } = Astro.props;
---

<a
  class:list={[
    "card transform-y-[-40%] align-start perspective-1200 dark:shadow-thick group relative col-span-1 h-max w-full flex-none transform justify-start overflow-hidden rounded-3xl bg-white p-6 shadow-xl ring-1 ring-primary/5 transition duration-75 ease-in-out dark:bg-secondary dark:ring-white/10 sm:h-auto",
    colSpan || "md:col-span-2",
    rowSpan || null,
    classes,
  ]}
  href={href}
  target={target}
>
  <div class="flex w-full items-start justify-between">
    <div class="flex w-full items-center justify-between">
      {
        title && (
          <h2 class="z-20 m-0 text-xl font-semibold tracking-tight text-primary dark:text-white lg:text-2xl">
            {title}
          </h2>
        )
      }
      <slot name="title" />
      <Icon
        name="tabler:arrow-up-right"
        size={20}
        class="z-20 transition-transform duration-100 ease-in-out group-hover:-translate-y-1 group-hover:translate-x-1 group-hover:text-red-500"
      />
    </div>
  </div>
  <slot />
</a>
