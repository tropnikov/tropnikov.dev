---
interface Props {
  icon: string;
  href: string;
}

const { href, icon } = Astro.props;
---

<li class='link-card'>
  <a href={href} target='_blank' class='p-1.5 sm:p-2.5'>
    <img src={icon} alt='link icon' class='w-7 md:w-10' />
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    background-color: #abafb7;
    /* background-color: #f8fafc; */
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: white;
    opacity: 0.8;
  }
  .link-card:is(:hover) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
</style>
